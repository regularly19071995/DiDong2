<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LienHeActivity"
    android:orientation="vertical"
    android:background="#ffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:background="@android:color/darker_gray"
            app:titleTextColor="@android:color/holo_green_light"
            app:title="LIÊN HỆ"
            android:id="@+id/tbLienHe"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </android.support.v7.widget.Toolbar>
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="LIÊN HỆ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:text="Họ và tên"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/edtName"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:background="@drawable/border_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:hint="Nhập họ tên"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:text="Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/edtEmail"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:background="@drawable/border_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:hint="Nhập email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_marginLeft="20dp"
                    android:text="Tin nhắn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edtNoiDung"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border_text"
                    android:hint="Nhập nội dung tin nhắn"
                    android:layout_width="350dp"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnSubmit"
            android:background="@drawable/border"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:text="Gửi"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Danh sách tin nhắn"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/lvLienHe"
                android:layout_width="match_parent"
                android:layout_height="400dp"></ListView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>